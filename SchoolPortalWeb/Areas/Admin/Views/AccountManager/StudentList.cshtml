@model List<ApplicationUser>

<h3 class="text-center">Student List </h3>
<div class="text-end">
    <a class="col-2 btn btn-primary mb-3" asp-area="Admin" asp-controller="AccountManager" asp-action="AdminTeacherList">View Admin/Teachers</a>
  @*   <a class="col-2 btn btn-primary mb-3" asp-area="Admin" asp-controller="AccountManager" asp-action="Create">+ Add Student(s)</a> *@
    <a class="col-2 btn btn-primary mb-3" id="register" asp-area="Identity" asp-page="/Account/Register">Add New User</a>
</div>
<table class="table table-striped text-center">
    <tr>
      @*   <th scope="col">ID</th> *@
        <th scope="col">Role</th>
        <th scope="col">Rank</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Year Enrolled</th>
        <th scope="col">Branch of Service
            (BoS)
        </th>
        <th scope="col">Serial Number</th>
        <th scope="col">Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
           @*  <td>@user.Id</td> *@
            <td>@user.Role</td>
            <td>@user.Rank</td>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.YearEnrolled</td>
            <td>@user.BranchOfService</td>
            <td>@user.UserName</td>
            <td>
                <a asp-area="Admin" asp-controller="AccountManager" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary mx-1">Edit</a>
                <a class="btn btn-sm btn-danger mx-1" onclick="deleteUser(this.id)" id="@user.Id">Delete</a>
            </td>
        </tr>
    }
</table>

<script src="~/js/accountManager.js"></script>